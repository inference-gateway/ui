# General Settings
NODE_ENV=development
PORT=3000
HOSTNAME=0.0.0.0
INFERENCE_GATEWAY_URL=http://inference-gateway:8080
INFERENCE_GATEWAY_API_KEY=
LOG_LEVEL=debug

# Enable PostgreSQL storage backend
STORAGE_TYPE=postgres

# Database connection string
# Format: postgresql://username:password@host:port/database
DB_CONNECTION_URL=postgresql://postgres:password@postgres:5432/inference_gateway

# Database connection pool configuration (optional)
# Maximum number of connections in the pool when using postgres as storage type
DB_POOL_SIZE=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Inference Gateway backend URL
INFERENCE_GATEWAY_URL=http://inference-gateway:8080

# Authentication (set to true if using authentication)
AUTH_ENABLE=false

# Logging level (optional, defaults to 'debug' in development, 'info' in production)
LOG_LEVEL=info
